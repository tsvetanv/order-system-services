{
  "info": {
    "name": "Order Service â€“ AWS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/actuator/health"
      }
    },
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/orders",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer\": {\n    \"customerId\": \"{{customerId}}\"\n  },\n  \"items\": [\n    {\n      \"productId\": \"{{productId1}}\",\n      \"quantity\": 2\n    },\n    {\n      \"productId\": \"{{productId2}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"currency\": \"USD\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('orderId', json.orderId);"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/orders/{{orderId}}"
      }
    },
    {
      "name": "Cancel Order",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/orders/{{orderId}}"
      }
    }
  ]
}
